  "dependencies": {
    "@opencode-ai/sdk": "latest",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.3",
    "@types/pino": "^7.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "typescript": "^5.9.3"
  }
